<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>

	<application>
		<view-handler>org.springframework.faces.mvc.support.MvcViewHandler</view-handler>
		<navigation-handler>org.springframework.faces.mvc.support.MvcNavigationHandler</navigation-handler>
		<variable-resolver>org.springframework.faces.mvc.support.PageScopeVariableResolver</variable-resolver>
		<variable-resolver>org.springframework.faces.mvc.support.FlashScopeVariableResolver</variable-resolver>
		<variable-resolver>org.springframework.faces.mvc.support.MvcHandlerVariableResolver</variable-resolver>
	</application>

	<factory>
		<application-factory>org.springframework.faces.mvc.support.MvcApplicationFactory</application-factory>
	</factory>

	<lifecycle>
		<phase-listener>org.springframework.faces.mvc.support.MvcPhaseListener</phase-listener>
	</lifecycle>
</faces-config>
